<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demoproject.HelloController"
      spacing="10"
      style="-fx-background-color: #fff5f7;"
      prefHeight="600" prefWidth="1000">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <MenuBar>
        <Menu text="Файл">
            <items>
                <MenuItem text="Сохранить в CSV" onAction="#handleSaveToCSV"/>
                <MenuItem text="Сохранить в JSON" onAction="#handleSaveToJSON"/>
                <SeparatorMenuItem/>
                <MenuItem text="Загрузить из CSV" onAction="#handleLoadFromCSV"/>
                <MenuItem text="Загрузить из JSON" onAction="#handleLoadFromJSON"/>
                <SeparatorMenuItem/>
                <MenuItem text="Автосохранение" onAction="#handleAutoSave"/>
                <MenuItem text="Очистить автосохранения" onAction="#handleClearAutoSave"/>
            </items>
        </Menu>
        <Menu text="Действия">
            <items>
                <MenuItem text="Удалить выбранное" onAction="#handleDeleteEvent"/>
                <MenuItem text="Очистить все" onAction="#handleClearAll"/>
                <MenuItem text="Печать списка" onAction="#handlePrintList"/>
            </items>
        </Menu>
    </MenuBar>

    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Левая панель - форма -->
        <VBox spacing="10" prefWidth="350">
            <Label text="Добавить мероприятие"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Организатор:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="organizerInput" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Название:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="eventNameInput" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Место:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="placeInput" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Дата:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <TextField fx:id="dateInput" prefWidth="100" promptText="ДД.ММ.ГГГГ"/>
                    <TextField fx:id="timeInput" prefWidth="70" promptText="ЧЧ:ММ"/>
                </HBox>

                <Label text="Длительность (ч):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="durationInput" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Кол-во людей:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="peopleInput" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Телефон:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneInput" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Button text="Добавить" onAction="#handleAddEvent"
                        GridPane.rowIndex="7" GridPane.columnIndex="1"
                        style="-fx-background-color: #ff85a2; -fx-text-fill: white;"/>
            </GridPane>
        </VBox>

        <!-- Правая панель - таблица -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Список мероприятий"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="eventTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="organizerColumn" text="Организатор" prefWidth="120"/>
                    <TableColumn fx:id="eventNameColumn" text="Название" prefWidth="150"/>
                    <TableColumn fx:id="placeColumn" text="Место" prefWidth="120"/>
                    <TableColumn fx:id="dateTimeColumn" text="Дата и время" prefWidth="150"/>
                    <TableColumn fx:id="durationColumn" text="Длительность" prefWidth="80"/>
                    <TableColumn fx:id="peopleColumn" text="Люди" prefWidth="80"/>
                    <TableColumn fx:id="phoneColumn" text="Телефон" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>

</VBox>